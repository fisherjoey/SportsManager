# Docker Development Environment Variables

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=sports_management
DB_USER=postgres
DB_PASSWORD=postgres123
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/sports_management

# Node Environment
NODE_ENV=development

# JWT Configuration
JWT_SECRET=docker-dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# API Configuration
API_URL=http://backend:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# Redis Configuration
REDIS_URL=redis://redis:6379
DISABLE_REDIS=false

# Monitoring (Optional)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# Location Services
LOCATION_SERVICE=openroute
GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=
OPENROUTE_API_KEY=

# Docker Build Target
BUILD_TARGET=dev