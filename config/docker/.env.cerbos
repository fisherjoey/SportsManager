# Cerbos Configuration
# Add these to your .env file

# Cerbos Server
CERBOS_HOST=localhost:3592
CERBOS_TLS=false

# Cerbos Cache Settings
CERBOS_CACHE_TTL=300000  # 5 minutes in milliseconds
CERBOS_CACHE_ENABLED=true

# Feature Flags
USE_CERBOS=true  # Set to false to use legacy auth (during migration)