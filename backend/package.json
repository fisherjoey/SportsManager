{
  "name": "sports-management-api",
  "version": "1.0.0",
  "description": "REST API for Sports Management App",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "npx cross-env DISABLE_REDIS=true ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "npx tsc",
    "build:watch": "npx tsc --watch",
    "type-check": "npx tsc --noEmit",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "test": "jest",
    "test:unit": "SKIP_DB_TESTS=true jest --testPathIgnorePatterns=\"/tests/database/\" --testPathIgnorePatterns=\"/tests/integration/\"",
    "test:coverage": "c8 jest --coverage",
    "test:watch": "jest --watch",
    "test:invitations": "node tests/invitations-test-suite.js",
    "test:invitations:unit": "jest tests/services/emailService.test.js tests/routes/invitations.test.js",
    "test:invitations:integration": "jest tests/integration/invitations-integration.test.js",
    "test:invitations:edge-cases": "jest tests/edge-cases/invitations-edge-cases.test.js",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\"",
    "audit": "audit-ci --config audit-ci.json",
    "analyze": "madge --circular --extensions js,ts src/",
    "docs": "jsdoc -c jsdoc.conf.json",
    "clean": "rimraf coverage/ docs/ .nyc_output/ quality-reports/ dist/",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test:coverage",
    "quality:check": "node scripts/quality/check-code-quality.js",
    "quality:full": "npm run quality:check && npm run db:health && npm run performance:benchmark",
    "db:health": "node scripts/database/health-check.js",
    "db:cleanup": "node scripts/database/health-check.js --old-data-days 30",
    "performance:benchmark": "node scripts/performance/benchmark.js",
    "performance:baseline": "node scripts/performance/benchmark.js --iterations 20",
    "maintenance:daily": "npm run quality:full && npm run db:cleanup",
    "maintenance:full": "npm run clean && npm run quality:full && npm run test:coverage && npm run audit",
    "ci:quality": "npm run type-check && npm run lint && npm run format:check && npm run quality:check",
    "ci:test": "npm run test:coverage --ci --coverage --watchAll=false",
    "ci:security": "npm run audit && npm run test -- --testPathPattern=\"tests/security\"",
    "ci:performance": "npm run performance:benchmark --base-url http://localhost:3000",
    "dashboard": "node scripts/monitoring/dashboard.js",
    "dashboard:static": "node scripts/monitoring/dashboard.js --static",
    "alerts:check": "node scripts/monitoring/alerts.js --check-health",
    "alerts:test": "node scripts/monitoring/alerts.js --test-alert warning",
    "setup:maintenance": "./scripts/setup-maintenance.sh"
  },
  "dependencies": {
    "@google-cloud/vision": "^5.3.2",
    "@sentry/node": "^10.7.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "fs-extra": "^11.3.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "isomorphic-dompurify": "^2.26.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "lodash": "^4.17.21",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "openai": "^5.10.2",
    "otplib": "^12.0.1",
    "pdf-poppler": "^0.2.1",
    "pdf2pic": "^3.2.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.3",
    "resend": "^4.7.0",
    "sharp": "^0.34.3",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.6.0",
    "@types/jest": "^30.0.0",
    "audit-ci": "^7.1.0",
    "c8": "^10.1.3",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "madge": "^8.0.0",
    "nock": "^14.0.6",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  },
  "keywords": [
    "sports",
    "management",
    "api",
    "referee",
    "games"
  ],
  "author": "",
  "license": "MIT"
}
