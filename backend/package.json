{
  "name": "sports-management-api",
  "version": "1.0.0",
  "description": "REST API for Sports Management App",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "test": "jest",
    "test:coverage": "c8 jest --coverage",
    "test:watch": "jest --watch",
    "test:invitations": "node tests/invitations-test-suite.js",
    "test:invitations:unit": "jest tests/services/emailService.test.js tests/routes/invitations.test.js",
    "test:invitations:integration": "jest tests/integration/invitations-integration.test.js",
    "test:invitations:edge-cases": "jest tests/edge-cases/invitations-edge-cases.test.js",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "audit": "audit-ci --config audit-ci.json",
    "analyze": "madge --circular --extensions js src/",
    "docs": "jsdoc -c jsdoc.conf.json",
    "clean": "rimraf coverage/ docs/ .nyc_output/",
    "validate": "npm run lint && npm run format:check && npm run test:coverage"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "resend": "^4.7.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.6.0",
    "audit-ci": "^7.1.0",
    "c8": "^10.1.3",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "madge": "^8.0.0",
    "nock": "^14.0.6",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "sports",
    "management",
    "api",
    "referee",
    "games"
  ],
  "author": "",
  "license": "MIT"
}
