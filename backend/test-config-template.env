# Enterprise API Test Configuration Template
# Copy this file to test-config.env and fill in your values

# Server Configuration
BASE_URL=http://localhost:3001

# Authentication
# Get this token by logging in to your application
AUTH_TOKEN=

# Test Data IDs
# These should be valid UUIDs from your database
# You can get these by querying your database or creating test records

# Valid user UUID for testing user-specific endpoints
TEST_USER_ID=

# Valid employee UUID for testing employee-specific endpoints  
TEST_EMPLOYEE_ID=

# Valid department UUID for testing department-specific endpoints
TEST_DEPARTMENT_ID=

# Valid asset UUID for testing asset-specific endpoints
TEST_ASSET_ID=

# Valid location UUID for testing location-specific endpoints
TEST_LOCATION_ID=

# Test Configuration Options
VERBOSE_OUTPUT=false
DELAY_BETWEEN_REQUESTS=0.5
TIMEOUT_SECONDS=30

# Expected HTTP Status Codes (for advanced configuration)
# Most endpoints return 200, but you can customize expected responses
# Format: ENDPOINT_METHOD=/path=expected_code
# Example: GET_/api/employees=200

# Performance Testing (optional)
ENABLE_PERFORMANCE_TESTS=false
MAX_RESPONSE_TIME_MS=1000

# Output Configuration
SAVE_RESPONSES=false
RESPONSE_LOG_FILE=test-responses.log
ERROR_LOG_FILE=test-errors.log

# Database Connection (for setup/teardown of test data)
# Only needed if you want to create/cleanup test data automatically
DATABASE_URL=

# Notifications (optional)
# Send test results via webhook or email
WEBHOOK_URL=
NOTIFICATION_EMAIL=