NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3004

# Database - Using PostgreSQL connection string
# Update the password after the colon (currently 'postgres') to your actual PostgreSQL password
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/sports_management

# Individual DB variables for knexfile
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sports_management
DB_USER=postgres
DB_PASSWORD=postgres123

# JWT
JWT_SECRET=development-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (disable for now to avoid connection errors)
DISABLE_REDIS=true

# Cerbos Configuration
CERBOS_HOST=localhost:3593
CERBOS_TLS=false
CERBOS_CACHE_ENABLED=true
CERBOS_CACHE_TTL=300000

# Auth Bypass (for Figma scraping and development)
# WARNING: Set to 'false' or remove in production!
DISABLE_AUTH=true

