# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Database - Use Cloud SQL connection
# DATABASE_URL will be set via Secret Manager
DB_HOST=/cloudsql/PROJECT_ID:us-central1:sports-management-db
DB_PORT=5432
DB_NAME=sports_management
DB_USER=sports_user
# DB_PASSWORD will be set via Secret Manager

# JWT Configuration - Use Secret Manager
# JWT_SECRET will be set via Secret Manager
JWT_EXPIRES_IN=7d

# Frontend URL - Update with your Cloud Run frontend URL
FRONTEND_URL=https://sports-management-frontend-HASH-uc.a.run.app

# Rate Limiting - Production settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Service (Update with your email service)
RESEND_API_KEY=your-production-resend-api-key
FROM_EMAIL=noreply@yourdomain.com

# Security
TRUST_PROXY=true
SECURE_COOKIES=true

# Logging
LOG_LEVEL=info