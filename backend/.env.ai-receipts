# AI-Powered Receipt Processing Configuration
# Add these variables to your .env file

# AI Services Configuration
# Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/google-cloud-service-account.json

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Redis Configuration (for job queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload Configuration
RECEIPT_UPLOAD_DIR=uploads/receipts
MAX_RECEIPT_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Accounting Integration
ACCOUNTING_EMAIL=accounting@yourdomain.com
ACCOUNTING_NOTIFICATION_ENABLED=true

# AI Processing Configuration
OCR_CONFIDENCE_THRESHOLD=0.7
LLM_CONFIDENCE_THRESHOLD=0.6
AUTO_CATEGORIZATION_ENABLED=true
MANUAL_REVIEW_THRESHOLD=0.7

# Cost Tracking Configuration
OPENAI_COST_TRACKING_ENABLED=true
GOOGLE_VISION_COST_TRACKING_ENABLED=true

# Background Job Configuration
QUEUE_REDIS_DB=1
QUEUE_CLEANUP_INTERVAL=3600000
QUEUE_CONCURRENCY=5

# Duplicate Detection Configuration
DUPLICATE_DETECTION_ENABLED=true
FILE_HASH_ALGORITHM=sha256