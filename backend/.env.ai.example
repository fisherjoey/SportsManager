# AI Configuration Environment Variables
# Copy this file to .env and add these variables

# Assignment Weight Factors (must sum to 1.0)
AI_WEIGHT_PROXIMITY=0.3
AI_WEIGHT_AVAILABILITY=0.4
AI_WEIGHT_EXPERIENCE=0.2
AI_WEIGHT_PERFORMANCE=0.1

# Assignment Constraints
AI_MAX_DISTANCE=50
AI_MIN_CONFIDENCE=0.3
AI_MAX_GAMES_PER_DAY=4
AI_MAX_GAMES_PER_WEEK=15
AI_MIN_REST_MINUTES=45
AI_AVOID_BACK_TO_BACK=true
AI_PRIORITIZE_EXPERIENCE=true

# LLM Service Configuration
AI_PROVIDER=auto
OPENAI_MODEL=gpt-4o-mini
DEEPSEEK_MODEL=deepseek-chat
AI_TIMEOUT=60000
AI_MAX_RETRIES=3
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=4000

# Caching Configuration
AI_CACHE_ENABLED=true
AI_CACHE_MAX_SIZE=100
AI_CACHE_TTL=3600
AI_CACHE_MEMORY_MB=50

# Batching Configuration
AI_BATCHING_ENABLED=true
AI_MAX_GAMES_PER_BATCH=10
AI_MAX_REFEREES_PER_BATCH=50
AI_BATCH_TIMEOUT=30000

# Monitoring Configuration
AI_MONITORING_ENABLED=true
AI_LOG_SLOW_REQUESTS_MS=5000
AI_TRACK_METRICS=true
AI_ALERT_ERROR_RATE=0.1
AI_ALERT_AVG_LATENCY_MS=10000
AI_ALERT_P95_LATENCY_MS=20000

# Logging Configuration
LOG_LEVEL=info