# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sports_management
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# API Configuration
API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# Monitoring (Optional but Recommended)
# Get your DSN from https://sentry.io after creating a project
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Redis Configuration (Optional - for job queues)
REDIS_URL=redis://localhost:6379
DISABLE_REDIS=true  # Set to true to use mock queue in development/testing

# Email Configuration (if needed)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# Location Services (for referee distance calculations)
# Options: google, mapbox, openroute
LOCATION_SERVICE=openroute
GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=
OPENROUTE_API_KEY=